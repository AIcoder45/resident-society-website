{
  "name": "Greenwood Mobile-Only Theme",
  "version": "1.0.0",
  "description": "Mobile-only theme (320px - 480px) optimized for smartphone screens. No desktop/tablet support.",
  "viewport": {
    "minWidth": "320px",
    "maxWidth": "480px",
    "orientation": "portrait",
    "constraint": "max-width: 480px"
  },
  "breakpoints": {
    "mobileSmall": "320px",
    "mobileMedium": "375px",
    "mobileLarge": "480px"
  },
  "colors": {
    "primary": {
      "main": "#2F855A",
      "dark": "#22543D",
      "light": "#48BB78",
      "contrastText": "#FFFFFF"
    },
    "accent": {
      "yellow": "#FFD700",
      "yellowDark": "#FFC107",
      "yellowLight": "#FFEB3B"
    },
    "background": {
      "default": "#FFFFFF",
      "paper": "#FFFFFF",
      "dark": "#1A202C",
      "light": "#F7FAFC"
    },
    "text": {
      "primary": "#000000",
      "secondary": "#4A5568",
      "disabled": "#A0AEC0",
      "hint": "#718096",
      "onDark": "#FFFFFF",
      "onImage": "#FFFFFF"
    },
    "border": {
      "default": "#E2E8F0",
      "light": "#F1F5F9",
      "dark": "#CBD5E0"
    },
    "status": {
      "verified": "#10B981",
      "emergency": "#EF4444",
      "featured": "#FFD700",
      "success": "#38A169",
      "warning": "#D69E2E",
      "error": "#E53E3E",
      "info": "#3182CE"
    },
    "overlay": {
      "dark": "rgba(0, 0, 0, 0.6)",
      "light": "rgba(255, 255, 255, 0.9)",
      "gradient": "linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 50%, transparent 100%)"
    }
  },
  "typography": {
    "fontFamily": {
      "serif": "Georgia, 'Times New Roman', serif",
      "sansSerif": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "mono": "'Courier New', monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeight": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.75
    },
    "headings": {
      "h1": {
        "fontSize": "1.75rem",
        "fontWeight": 700,
        "lineHeight": 1.3,
        "fontFamily": "serif"
      },
      "h2": {
        "fontSize": "1.5rem",
        "fontWeight": 700,
        "lineHeight": 1.4,
        "fontFamily": "serif"
      },
      "h3": {
        "fontSize": "1.25rem",
        "fontWeight": 600,
        "lineHeight": 1.4,
        "fontFamily": "serif"
      },
      "h4": {
        "fontSize": "1.125rem",
        "fontWeight": 600,
        "lineHeight": 1.4,
        "fontFamily": "sansSerif"
      }
    },
    "body": {
      "fontSize": "1rem",
      "fontWeight": 400,
      "lineHeight": 1.6,
      "fontFamily": "sansSerif"
    },
    "caption": {
      "fontSize": "0.75rem",
      "fontWeight": 400,
      "lineHeight": 1.5,
      "fontFamily": "sansSerif",
      "color": "text.secondary"
    }
  },
  "spacing": {
    "base": 8,
    "scale": {
      "0": "0px",
      "1": "0.5rem",
      "2": "1rem",
      "3": "1.5rem",
      "4": "2rem",
      "5": "2.5rem",
      "6": "3rem",
      "8": "4rem",
      "10": "5rem",
      "12": "6rem"
    }
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "default": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
  },
  "borderRadius": {
    "none": "0px",
    "sm": "0.25rem",
    "default": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "full": "9999px"
  },
  "components": {
    "card": {
      "backgroundColor": "#FFFFFF",
      "borderRadius": "0.75rem",
      "border": "1px solid #E2E8F0",
      "padding": "1.25rem",
      "shadow": "default",
      "width": "100%",
      "maxWidth": "100%",
      "active": {
        "shadow": "md",
        "transform": "scale(0.98)"
      }
    },
    "button": {
      "primary": {
        "backgroundColor": "#2F855A",
        "color": "#FFFFFF",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontWeight": 600,
        "minHeight": "44px",
        "width": "100%",
        "active": {
          "backgroundColor": "#22543D",
          "transform": "scale(0.98)"
        }
      },
      "secondary": {
        "backgroundColor": "transparent",
        "color": "#2F855A",
        "border": "2px solid #2F855A",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontWeight": 600,
        "minHeight": "44px"
      },
      "text": {
        "backgroundColor": "transparent",
        "color": "#2F855A",
        "padding": "0.5rem 1rem",
        "minHeight": "44px"
      }
    },
    "badge": {
      "default": {
        "padding": "0.25rem 0.75rem",
        "borderRadius": "9999px",
        "fontSize": "0.75rem",
        "fontWeight": 600,
        "textTransform": "uppercase"
      },
      "featured": {
        "backgroundColor": "#FFD700",
        "color": "#000000",
        "padding": "0.25rem 0.5rem",
        "borderRadius": "0.25rem",
        "fontSize": "0.625rem",
        "fontWeight": 700
      },
      "verified": {
        "backgroundColor": "#10B981",
        "color": "#FFFFFF",
        "border": "1px solid #059669"
      },
      "emergency": {
        "backgroundColor": "#EF4444",
        "color": "#FFFFFF",
        "border": "1px solid #DC2626"
      }
    },
    "navigation": {
      "bottomNav": {
        "height": "64px",
        "backgroundColor": "#FFFFFF",
        "borderTop": "1px solid #E2E8F0",
        "padding": "0.5rem 0",
        "iconSize": "24px",
        "activeColor": "#2F855A",
        "inactiveColor": "#718096"
      },
      "topNav": {
        "height": "56px",
        "backgroundColor": "#FFFFFF",
        "borderBottom": "1px solid #E2E8F0",
        "padding": "0 1rem"
      }
    },
    "image": {
      "cardImage": {
        "height": "192px",
        "borderRadius": "0.75rem 0.75rem 0 0",
        "objectFit": "cover"
      },
      "thumbnail": {
        "width": "80px",
        "height": "80px",
        "borderRadius": "0.5rem",
        "objectFit": "cover"
      }
    },
    "input": {
      "height": "44px",
      "padding": "0.75rem 1rem",
      "borderRadius": "0.5rem",
      "border": "1px solid #CBD5E0",
      "fontSize": "1rem",
      "focus": {
        "borderColor": "#2F855A",
        "outline": "2px solid rgba(47, 133, 90, 0.2)"
      }
    }
  },
  "animations": {
    "duration": {
      "fast": "0.1s",
      "normal": "0.2s",
      "slow": "0.3s"
    },
    "easing": {
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "transitions": {
      "default": "all 0.2s ease-in-out",
      "fast": "all 0.1s ease-in-out"
    }
  },
  "zIndex": {
    "dropdown": 1000,
    "sticky": 1020,
    "fixed": 1030,
    "modalBackdrop": 1040,
    "modal": 1050,
    "popover": 1060,
    "tooltip": 1070
  }
}

